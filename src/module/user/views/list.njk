{% extends '../../views/index.njk' %}

{% block body %}
<div class="container div-table-container column">
    <div class="table-container">
        <table class="table is-bordered car-list is-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Birth Date</th>
                    <th>Country</th>
                    <th>Gender</th>
                    <th>Phone Number</th>
                    <th>ID Number</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in data.users %}
                <tr>
                    <th>{{ user.id }}</th>
                    <th>{{ user.first_name }}</th>
                    <th>{{ user.last_name }}</th>
                    <th>{{ user.birth_date }}</th>
                    <th>{{ user.country }}</th>
                    <th>{{ user.gender }}</th>
                    <th>{{ user.phone_number }}</th>
                    <th>{{ user.id_number }}</th>
                    <th id="actions">
                        <a href="user/add/{{user.id}}" class="icon is-medium">
                          <i class="fas fa-edit fa-2x"></i>
                        </a>
                        <a href="user/delete/{{ user.id }}" class="icon is-medium has-text-danger">
                          <i class="fas fa-ban fa-2x"></i>
                        </a>
                    </th>
                </tr>
                {% endfor %}
            </tbody>

        </table>
    </div>
</div>
{% endblock %}
