{% extends '../../views/index.njk' %}

{% block body %}
<div class="container div-table-container">
    <div class="table-container">
        <table class="table is-hoverable car-list is-striped">
            <thead>
                <tr>
                    <th>Stock</th>
                    <th>Precio/Dia</th>
                    <th>Marca</th>
                    <th>Modelo</th>
                    <th id="anio_h">AÃ±o</th>
                    <th id="kms_h">KMS</th>
                    <th class="color_h">Color</th>
                    <th id="pasajeros_h">Pasajeros</th>
                    <th id="aire_h">Aire Acondicionado</th>
                    <th id="automatico_h">Automatico</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for car in data.cars %}
                <tr>
                    <th>{{ car.stock }}</th>
                    <th>{{ car.price_per_day }}</th>
                    <th>{{ car.brand }}</th>
                    <th>{{ car.model }}</th>
                    <th id="anio_th">{{ car.year }}</th>
                    <th id="kms_th">{{ car.kms }}</th>
                    <th class="color_h">{{ car.color }}</th>
                    <th id="pasajeros_th">{{ car.passengers }}</th>
                    <th id="aire_th">{{ car.air_conditioner }}</th>
                    <th id="automatico_th">{{ car.automatic }}</th>
                    <th id="actions">
                            <a href="car/add/{{car.id}}" class="icon is-medium list-action-icon">
                                <i class="fas fa-edit fa-2x"></i>
                            </a>
                            <a href="car/delete/{{ car.id }}" class="icon is-medium has-text-danger list-action-icon">
                                <i class="fas fa-ban fa-2x"></i>
                            </a>
                    </th>
                </tr>
                {% endfor %}
            </tbody>

        </table>
    </div>
</div>
{% endblock %}
